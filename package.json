{
  "name": "@frugalwizard/solidity-compiler-wrapper",
  "version": "1.2.0",
  "description": "This is a just a wrapper for solc-js meant to simplify its use in build tasks and provide some functionality usually expected when handling Solidity projects",
  "license": "MIT",
  "author": "Frugal-Wizard",
  "main": "dist/solidity-compiler.js",
  "repository": "https://github.com/Frugal-Wizard/solidity-compiler-wrapper.git",
  "bin": {
    "wsolc": "./dist/wsolc.js"
  },
  "scripts": {
    "clean": "del dist",
    "compile": "tsc -p src",
    "chmod": "shx chmod +x dist/wsolc.js",
    "build": "run-s clean compile chmod",
    "prepare": "npm run build",
    "test": "mocha",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc"
  },
  "peerDependencies": {
    "solc": "^0.8"
  },
  "dependencies": {
    "glob": "^10.2.5",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/yargs": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "chai": "^4.3.7",
    "del-cli": "^5.0.0",
    "eslint": "^8.33.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "shx": "^0.3.4",
    "solc": "^0.8.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
